/**
 * 通用样式
 * @author vimo
 * @date 2018-01-11
 */
*
    box-sizing border-box

html
body
#app
#app > *
    position relative
    width 100%
    height 100%
    overflow hidden

.transition
    transition all .8s ease

// 省略号文字截断
.t-ell
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

// 左右对齐
.f-l
    float left
.f-r
    float right

// 定位
.rel
    position relative
.abs
    position absolute
.fixed
    position fixed

// 字体位置
.align-c
    text-align center
.align-l
    text-align left
.align-r
    text-align right

// 显示器
.display-b
    display block
.display-ib
    display inline-block
.display-n
    display none
.display-i
    display inherit


// 清除浮动
.clearfix:before, .clearfix:after
    content ""
    display table
.clearfix:after
    clear both
    overflow hidden
.clearfix
    zoom 1
.clear
    clear both
    display block
    font-size 0
    height 0
    line-height 0
    overflow hidden
